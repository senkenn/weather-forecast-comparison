{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "rust-analyzer.linkedProjects": ["packages/cron_jobs/Cargo.toml"],
  "github-actions.workflows.pinned.workflows": [".github/workflows/daily.yaml"]
}
